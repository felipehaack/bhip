# Routes
# ~~~~

#For Protocol API
# ~~~~
POST        /xl-spaceship/protocol/game/new                           api.GameApi.register

PUT         /xl-spaceship/protocol/game/$gameId<[0-9a-zA-Z]+>         api.MatchApi.fired(gameId: String)

#For User API
# ~~~~
POST        /xl-spaceship/user/game/new                               api.GameApi.challenge
POST        /xl-spaceship/user/game/$gameId<[0-9a-zA-Z]+>/auto        api.GameApi.enableAutoPilot(gameId: String)

PUT         /xl-spaceship/user/game/$gameId<[0-9a-zA-Z]+>/fire        api.MatchApi.fire(gameId: String)

GET         /xl-spaceship/user/games                                  api.GameApi.status
GET         /xl-spaceship/user/game/$gameId<[0-9a-zA-Z]+>             api.GameApi.progress(gameId: String)
